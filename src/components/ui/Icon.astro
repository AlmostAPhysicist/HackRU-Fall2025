---
interface Props {
  name: string;
  size?: number;
  class?: string;
}

const { name, size = 18, class: cls = '' } = Astro.props as Props;
---
{/** Minimal inline icon component using simple free SVG shapes (Feather-like). Add more icons as needed. */}
{(() => {
  // keep implementation simple: explicit SVG attributes per element to avoid TSX typing issues
  if (name === 'calendar') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <rect x="3" y="4" width="18" height="18" rx="2" />
        <path d="M16 2v4M8 2v4M3 10h18" />
      </svg>
    );
  }
  if (name === 'tag' || name === 'offer') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2.41 12.41a2 2 0 0 1 0-2.83L9.58 2.41a2 2 0 0 1 2.83 0l8.18 8.18a2 2 0 0 1 0 2.82z" />
        <circle cx="7.5" cy="7.5" r="1.5" />
      </svg>
    );
  }
  if (name === 'box' || name === 'inventory') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <path d="M21 16V8a2 2 0 0 0-1-1.73L13 2.27a2 2 0 0 0-2 0L4 6.27A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" />
        <path d="M7 8v8M17 8v8" />
      </svg>
    );
  }
  if (name === 'check') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <path d="M20 6L9 17l-5-5" />
      </svg>
    );
  }
  if (name === 'alert' || name === 'flame') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <path d="M12 2s4 4 4 8a4 4 0 1 1-8 0c0-4 4-8 4-8z" />
        <path d="M12 22v-6" />
      </svg>
    );
  }
  if (name === 'nutrition' || name === 'apple') {
    return (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
        <path d="M19 13a6 6 0 1 1-14 0c0-3 2.5-5.5 5.5-5.5S19 10 19 13z" />
        <path d="M12.5 6.5c.7-.9 1.6-2 2.5-2" />
      </svg>
    );
  }

  // default: simple circle
  return (
    <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={cls}>
      <circle cx="12" cy="12" r="8" />
    </svg>
  );
})()}
