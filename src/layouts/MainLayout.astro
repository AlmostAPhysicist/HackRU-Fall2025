---
/**
 * MainLayout.astro
 * Shared application shell that provides document structure, global metadata,
 * and pulls in global styles for every page that wraps its content within this layout.
 * Pages supply the `title` prop and render their content via the default slot.
 */

import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Wakefern Marketplace — reduce waste, boost local supply.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
		<head>
			<meta charset="utf-8" />
			<meta name="viewport" content="width=device-width, initial-scale=1.0" />
			<title>{title ?? 'App'}</title>
			<link rel="icon" href="/favicon.svg" />
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;800;900&display=swap" rel="stylesheet">
		</head>
		<!-- Poppins for a modern UI feel -->
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<header style="padding: 1.5rem clamp(1rem, 2vw, 2.5rem);">
			<nav style="display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap;">
				<a href="/" style="font-weight: 700; font-size: 1.1rem;">Wakefern Marketplace</a>
				<div class="actions" style="display: flex; gap: 0.75rem; align-items: center; flex-wrap: wrap;">
					<a href="/buyer/dashboard" class="button button--ghost">Buyer dashboard</a>
					<a href="/seller/dashboard" class="button button--ghost">Seller dashboard</a>
					<a href="/buyer/login" class="button button--secondary">Buyer sign in</a>
					<a href="/seller/login" class="button button--secondary">Seller sign in</a>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer style="padding: 2rem clamp(1rem, 3vw, 4rem); text-align: center; color: var(--color-muted);">
			<p>© {new Date().getFullYear()} Wakefern Marketplace. Built for HackRU.</p>
		</footer>
	</body>
</html>
