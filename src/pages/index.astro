
---
/**
 * Landing page overview for Wakefern Marketplace.
 * Highlights buyer and seller journeys and links to their respective login experiences.
 */

import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/ui/Button.astro';
---

